<!--pages/map/map.wxml-->
<view class="container">
  <text>use map</text>
  <map 
    id="myMap" 
    style="width: 100%; height: 400px;"
    latitude="{{latitude}}"
    longitude="{{longitude}}"
    scale="{{scale}}"
    markers="{{markers}}"
    show-location
  >
    <cover-view class="controls">
      <cover-view class="scale subtract" bindtap='subtractScale'>-</cover-view>
      <cover-view class="scale add" bindtap='addScale'>+</cover-view>
      <cover-view class="scale">{{scale}}</cover-view>
    </cover-view>
  </map>

  <view class='operation'>
    <button bindtap="getLocation">当前位置</button>
    <button bindtap="chooseLocation">选择位置</button>
  </view>
</view>