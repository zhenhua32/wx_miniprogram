<!--pages/map/map.wxml-->
<view class="container">
  <map 
    id="myMap" 
    style="width: 100%; height: 400px;"
    latitude="{{latitude}}"
    longitude="{{longitude}}"
    scale="{{scale}}"
    markers="{{markers}}"
    show-location
  >
    <!-- <cover-view class="controls">
      <cover-view class="scale subtract" bindtap='subtractScale'>-</cover-view>
      <cover-view class="scale add" bindtap='addScale'>+</cover-view>
      <cover-view class="scale">{{scale}}</cover-view>
    </cover-view> -->
  </map>

  <view class='operation'>
    <button bindtap="getLocation">当前位置</button>
    <button bindtap="chooseLocation">选择位置</button>
    <button bindtap='findDoctor' disabled='{{ !(department && ill) }}'>寻找医生</button>
  </view>
  <view>
    <text>经度: {{latitude}} </text>
    <text>纬度: {{longitude}}</text>
  </view>

  <view class='operation'>
    <text style='margin-right: 10rpx'>科室: </text>
    <input placeholder="填写科室" placeholder-style='border-bottom: 10px solid #000' bindconfirm='inputDepartment'/>
  </view>

   <view class='operation'>
    <text style='margin-right: 10rpx'>疾病: </text>
    <input placeholder="填写疾病" placeholder-style='border-bottom: 10px solid #000' bindconfirm='inputIll'/>
  </view>

  <view>
    <picker mode="region" bindchange="regionChange" custom-item="{{customItem}}">
      <view class="picker">
      地区：{{region[0]}}，{{region[1]}}，{{region[2]}}
      </view>
    </picker>
  </view>

</view>